<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Xs4All_PHP_CodeSniffer">
  <description>Xs4All PHP CodeSniffer Configuration</description>

  <file>../../src</file>

  <config name="ignore_errors_on_exit" value="1"/>
  <config name="ignore_warnings_on_exit" value="1"/>

  <arg name="colors"/>
  <arg name="report" value="source"/>
  <arg name="report-checkstyle" value="checkstyle.xml"/>

  <rule ref="../../vendor/escapestudios/symfony2-coding-standard/Symfony2" />
</ruleset>
